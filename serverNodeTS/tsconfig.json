{
    "compilerOptions": {
        // "rootDir": "./src", // Root directory for source TypeScript files
        "baseUrl": "./src",
        "target": "ES2020" /* Target latest features compatible with Node.js
declarations. */,
        "module": "CommonJS", // Use CommonJS module system (used by Node.js)
        "outDir": "./dist", // Output directory for compiled files
        "esModuleInterop": true, // Interop between CommonJS and ES Modules
        "forceConsistentCasingInFileNames": true,
        "strict": true /* Enable all strict type-checking options. */,
        "skipLibCheck": true // Skip type checking of declaration files
        /* Visit https://aka.ms/tsconfig to read more about this file */
    },
    "include": ["src/**/*.ts"], // Files to be compiled (, "../shared/*.ts")
    "exclude": ["node_modules"]
}
